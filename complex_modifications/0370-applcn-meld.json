{
  "title": "#0370 — Meld — Remap Commands (b/c System Prefs Keyb Shortcuts fails)",
  "rules": [

    {
      "description": "#0371 — Meld — Remap Meld > Quit Meld: Control-Q → Command-Q",
      "manipulators": [
        {
          "from": {
            "key_code": "q",
            "modifiers": { "mandatory": [ "left_control" ] }
          },
          "to": {
            "key_code": "q",
            "modifiers": [ "left_command" ]
          },
          "conditions": [{
            "type": "frontmost_application_if",
            "bundle_identifiers": [ "^org\\.gnome\\.meld" ]
          }],
          "type": "basic"
        }
      ]
    },

    {
      "description": "#0372 — Meld — Remap File > New Comparison...: Control-N → Command-N",
