{
  "title": "#0130 — Systemwide — Right-Option to Left-Control (Logitech Ergo K860)",
  "rules": [

    {
      "description": "#0131 — Syswide — Ergo K480 — Forward Keys: Up/Down-RightOption (b/c cannot remap modifiers alone?!)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "up_arrow",
            "modifiers": { "mandatory": [ "right_option" ] }
          },
          "to": {
            "key_code": "up_arrow",
            "modifiers": [ "left_control" ]
          },
          "conditions": [
            {
              "type": "device_if",
              "identifiers": [
                {
                  "vendor_id": 1133,
                  "product_id": 50475
                }
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "down_arrow",
            "modifiers": { "mandatory": [ "right_option" ] }
          },
          "to": {
            "key_code": "down_arrow",
            "modifiers": [ "left_control" ]
          },
          "conditions": [
            {
              "type": "device_if",
              "identifiers": [
                {
                  "vendor_id": 1133,
                  "product_id": 50475
                }
              ]
            }
          ]
        }
      ]
    },

