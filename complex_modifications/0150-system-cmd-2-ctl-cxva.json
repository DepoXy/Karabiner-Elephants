{
  "title": "#0150 — Systemwide — Remap Edit Commands to Ctrl-key Combos",
  "rules": [

    {
      "description": "#0151 — Systemwide — Remap Cut: Control-X → Command-X",
      "manipulators": [
        {
          "from": {
            "key_code": "x",
            "modifiers": { "mandatory": [ "left_control" ] }
          },
          "to": {
            "key_code": "x",
            "modifiers": [ "left_command" ]
          },
          "conditions": [{
            "type": "frontmost_application_unless",
            "bundle_identifiers": [
              "^com\\.googlecode\\.iterm2",
              "^com\\.apple\\.Terminal"
            ]
          }],
          "type": "basic"
        }
      ]
    },
    {
      "description": "#0152 — Systemwide — Remap Copy: Control-C → Command-C",
